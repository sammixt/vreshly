@model com.vreshly.Models.PasswordResetModel
@{
    ViewData["Title"] = "Login ";
    Layout = "~/Views/Shared/_LayoutFrontend.cshtml";
}

<div class="login-register-area mt-no-text mb-no-text">
    <div class="container container-default-2 custom-area">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-custom">
                <div class="login-register-wrapper">
                    <div class="section-content text-center mb-5">
                        <h2 class="title-4 mb-2">Reset Password</h2>
                    </div>
                    <form id="reset-password-form"> 
                        <div class="single-input-item mb-3">
                            <input type="password" asp-for="Password" placeholder="Enter your Password">
                            <input type="hidden" asp-for="Email" />
                        </div>
                        <div class="single-input-item mb-3">
                            <input type="password" asp-for="ConfirmPassword" placeholder="Enter your Password Agian">
                            <input type="hidden" asp-for="Token" />
                        </div>

                        <div class="single-input-item mb-3">
                            <button class="btn obrien-button-2 primary-color" type="submit">Reset</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

