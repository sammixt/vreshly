@model IEnumerable<com.vreshly.Dtos.ProductDto>
<div class="content-body">
    <section id="basic-datatable">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header border-bottom">
                        <h4 class="card-title">Product</h4><button class="create-new btn btn-primary" data-toggle="modal" data-target="#modals-slide-in">+ Add New Product</button>
                    </div>
                    <div class="card-body">
                        <table id="dt_basic" class="table">
                            <thead>
                                <tr>
                                    <th>id</th>
                                    <th>Name</th>
                                    <th>Selling Price</th>
                                    <th>Discount Price</th>
                                    <th>Category</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="products">
                                @if (Model.Any())
                                {
                                    int count = 1;
                                    foreach (var product in Model)
                                    {
                                        <tr>

                                            <td>@(count++)</td>
                                            <td>@product.ProductName</td>
                                            <td>@product.SellingPrice</td>
                                            <td>@product.DiscountPrice</td>
                                            <td>@product.Category</td>
                                            <td>
                                                <div class="d-inline-flex">
                                                    <a class="pr-1 dropdown-toggle hide-arrow text-primary" data-toggle="dropdown">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-vertical font-small-4">
                                                            <circle cx="12" cy="12" r="1"></circle>
                                                            <circle cx="12" cy="5" r="1"></circle>
                                                            <circle cx="12" cy="19" r="1"></circle>
                                                        </svg>
                                                    </a>
                                                    <div class="dropdown-menu dropdown-menu-right">
                                                        @*<a href="javascript:;" class="dropdown-item">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-file-text mr-50 font-small-4">
                                                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                                                <polyline points="14 2 14 8 20 8"></polyline>
                                                                <line x1="16" y1="13" x2="8" y2="13"></line>
                                                                <line x1="16" y1="17" x2="8" y2="17"></line>
                                                                <polyline points="10 9 9 9 8 9"></polyline>
                                                            </svg>Details
                                                        </a><a href="javascript:;" class="dropdown-item">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-archive mr-50 font-small-4">
                                                                <polyline points="21 8 21 21 3 21 3 8"></polyline>
                                                                <rect x="1" y="3" width="22" height="5"></rect>
                                                                <line x1="10" y1="12" x2="14" y2="12"></line>
                                                            </svg>Archive
                                                        </a>*@
                                                        <a href="javascript:;" data-id="@product.Id" class="dropdown-item delete-record">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2 mr-50 font-small-4">
                                                                <polyline points="3 6 5 6 21 6"></polyline>
                                                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                                                <line x1="10" y1="11" x2="10" y2="17"></line>
                                                                <line x1="14" y1="11" x2="14" y2="17">
                                                                </line>
                                                            </svg>Delete
                                                        </a>
                                                    </div>
                                                </div>
                                                <a asp-action="ProductDetail" asp-controller="Product" asp-route-id="@product.Id" class="item-edit" data-id="@product.Id">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit font-small-4">
                                                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                                    </svg>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal to add new record -->

        <div class="modal modal-slide-in fade" id="modals-slide-in">
            <div class="modal-dialog sidebar-sm">
                <form class="add-new-record modal-content pt-0">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">×</button>
                    <div class="modal-header mb-1">
                        <h5 class="modal-title" id="exampleModalLabel">New Product</h5>
                    </div>
                    <div class="modal-body flex-grow-1">
                        <div class="form-group">
                            <label class="form-label" for="basic-icon-default-fullname">Product Name</label>
                            <input type="text" required class="form-control dt-full-name" id="category_name" placeholder="John Doe" aria-label="John Doe" />
                        </div>
                        <div class="form-group category_options">
                            <label class="form-label" for="basic-icon-default-fullname">Category</label>
                            <select  class="form-control form-control-lg mb-1" id="category_options">
                                <option>select category</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="basic-icon-default-fullname">Sub Category</label>
                            <select class="form-control form-control-lg mb-1" id="subcategory_options">
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="basic-icon-default-fullname">Brand</label>
                            <select class="form-control form-control-lg mb-1" id="brand_options">
                            </select>
                        </div>

                        <button type="button" id="add_product" class="btn btn-primary  mr-1">Submit</button>
                        <button type="reset" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>

    </section>
</div>

